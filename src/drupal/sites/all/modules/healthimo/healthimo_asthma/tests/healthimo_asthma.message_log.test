    function testMessageMostRecentSent() {
        // one inbound and one outbound record
        $created = time();
        $createdFirst = time();

        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->outbound = 0;
        $message_log = healthimo_asthma_message_log_save($message_log);

        $message_log = healthimo_asthma_message_log_load_most_recent_sent(4);
        $this->assertEqual($created, $message_log->created);

        $created++;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = healthimo_asthma_message_log_load_most_recent_sent(4);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $message_log = healthimo_asthma_message_log_load_most_recent_sent(4);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $created++;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = healthimo_asthma_message_log_load_most_recent_sent(4);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $created++;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $mid_saved = $message_log->mid;
        $message_log = healthimo_asthma_message_log_load_most_recent_sent(4);
        $mid_found = $message_log->mid;

        $this->assertEqual($mid_saved, $mid_found);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $message_log = healthimo_asthma_message_log_load_most_recent_sent(5);
        $this->assertFalse($message_log);
    }

    function testMessageMostRecentRequestTwoLogsSameCreated() {
       // one inbound and two (matching created) outbound records
        $created = time();
        $createdFirst = time();

        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->response_expected = 1;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->outbound = 0;
        $message_log = healthimo_asthma_message_log_save($message_log);

        $message_log = healthimo_asthma_message_log_load_most_recent_request(4);
        $this->assertEqual($created, $message_log->created);

        $created++;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->outbound = 1;
        $message_log->response_expected = 1;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = healthimo_asthma_message_log_load_most_recent_request(4);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $message_log = healthimo_asthma_message_log_load_most_recent_request(4);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $created++;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->outbound = 1;
        $message_log->response_expected = 1;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $mid_saved = $message_log->mid;
        $message_log = healthimo_asthma_message_log_load_most_recent_request(4);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        // keep latest two the same for this test
        // $created++;
        $createdLast = $created;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->outbound = 1;
        $message_log->response_expected = 1;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = healthimo_asthma_message_log_load_most_recent_request(4);
        $mid_found = $message_log->mid;
        // picks up the first of the two that match
        $this->assertEqual($mid_saved, $mid_found);
        $this->assertEqual($created, $message_log->created);
        $this->assertNotEqual($createdFirst, $created );

        $message_log = healthimo_asthma_message_log_load_most_recent_request(5);
        $this->assertFalse($message_log);

        $created++;
        $message_log = $this->getDefaultLog();
        $message_log->created = $created;
        $message_log->outbound = 1;
        $message_log->response_expected = 0;
        $message_log = healthimo_asthma_message_log_save($message_log);
        $message_log = healthimo_asthma_message_log_load_most_recent_request(4);
        $this->assertEqual($createdLast, $message_log->created);
        $this->assertNotEqual($created, $message_log->created);
    }

